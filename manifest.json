{
  "name": "Twitch Chat Translator",
  "description": "Translate Twitch chat automatically.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ]
}
